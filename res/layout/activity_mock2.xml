<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back_friends"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/plain_a_3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x" />

    <ImageView
        android:id="@+id/imgFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/y"
        android:contentDescription="front" />

    <TextView
        android:id="@+id/txtCount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/icon2"
        android:layout_alignTop="@+id/icon2"
        android:background="@drawable/icon_count"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="50"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCount3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/icon3"
        android:layout_alignTop="@+id/icon3"
        android:background="@drawable/icon_count"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="50"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon3"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="87dp"
        android:layout_toRightOf="@+id/y"
        android:src="@drawable/ic_indicator" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgFriends"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_indicator" />

</RelativeLayout>