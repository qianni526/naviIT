<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sinyee.navigatortesterv4.MainActivity$PlaceholderFragment"
    android:padding="10dp"  >
 
  <com.example.naviIT.LargerImageView
        android:id="@+id/imgDisplay1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter" />
  
   <TextView
      android:id="@+id/staticX"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
   
   <TextView
       android:id="@+id/staticY"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/staticX"/>
        
 
 
    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Download" 
         android:background="#734DFF"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:visibility="invisible"/>
 
</RelativeLayout>