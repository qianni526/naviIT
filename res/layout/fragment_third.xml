<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sinyee.navigatortesterv4.MainActivity$PlaceholderFragment"
    android:background="#fff"
     android:padding="10dp" >
    
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

	   <ImageView
	       android:id="@+id/qrImage"
	       android:layout_width="250dp"
	       android:layout_height="250dp"
	       android:layout_below="@+id/btnShowInfo"
	       android:layout_centerHorizontal="true"
	       android:background="#fff" 
	       android:src="@drawable/background_a"/>
	   
	   <ImageView
	       android:id="@+id/mapImage"
	       android:layout_width="250dp"
	       android:layout_height="250dp"
	       android:layout_below="@+id/btnShowInfo"
	       android:layout_centerHorizontal="true"
	       android:background="#fff" 
	       android:src="@drawable/map3"/>
	   

	   <ImageView
	       android:id="@+id/officeMarker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignRight="@+id/btnShowInfo"
	       android:layout_alignTop="@+id/qrImage"
	       android:layout_marginTop="53dp"
	       android:src="@drawable/ic_indicator" />

	   <ImageView
	       android:id="@+id/foyerMarker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_below="@+id/officeMarker"
	       android:layout_centerHorizontal="true"
	       android:layout_marginTop="24dp"
	       android:src="@drawable/ic_indicator" />

	   <ImageView
	       android:id="@+id/bk1Marker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignTop="@+id/foyerMarker"
	       android:layout_marginLeft="20dp"
	       android:layout_marginTop="29dp"
	       android:layout_toRightOf="@+id/foyerMarker"
	       android:src="@drawable/ic_indicator" />

	   <ImageView
	       android:id="@+id/bk3Marker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignLeft="@+id/officeMarker"
	       android:layout_alignTop="@+id/bk1Marker"
	       android:src="@drawable/ic_indicator" />

	   <ImageView
	       android:id="@+id/sleMarker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignLeft="@+id/bk1Marker"
	       android:layout_alignParentBottom="true"
	       android:src="@drawable/ic_indicator" />

	   <TextView
	       android:id="@+id/scanResult"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_below="@+id/btnScanner"
	       android:layout_marginTop="16dp"
	       android:text="Scan the nearest QR code to find your current location" />

	   <Button
	       android:id="@+id/btnScanner"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentTop="true"
	       android:layout_centerHorizontal="true"
	       android:background="#734DFF"
	       android:padding="10dp"
	       android:text="@string/btnScanner"
	       android:textColor="@android:color/white" />

	   <Button
	       android:id="@+id/btnShowInfo"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_below="@+id/scanResult"
	       android:layout_centerHorizontal="true"
	       android:layout_marginTop="14dp"
	       android:background="#734DFF"
	       android:padding="10dp"
	       android:text="Offline navigation"
	       android:textColor="@android:color/white" />

	   <ImageView
	       android:id="@+id/seminarRoom1Marker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_above="@+id/bk3Marker"
	       android:layout_alignLeft="@+id/bk3Marker"
	       android:src="@drawable/ic_indicator" />
    
  	</RelativeLayout>
  	
 </ScrollView>
